# Cloud Run에서는 Secret Manager 사용을 권장
# 아래는 참고용 예시이며, 실제 배포에서는 --update-secrets로 주입

# Cloud SQL Unix Socket 기반 (권장)
# mysql+pymysql://DBUSER:DBPASS@/DBNAME?unix_socket=/cloudsql/PROJECT:REGION:INSTANCE&charset=utf8mb4
DATABASE_URL=

ADMIN_KEY=BAKE_SIGHT_ADMIN_KEY
CREATE_TABLES=0

# Connection pool tuning (serverless safe defaults)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=2
DB_POOL_RECYCLE=1800
